<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_agregar_horario_restaurante"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.usuario.sodamovil.AgregarHorarioRestauranteActivity"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        android:id="@+id/toolbarAgregarHorarioRestaurante" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.usuario.horario.MainActivity"
        android:background="@android:color/background_light"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Horario"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:text="Lun."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLun"
                android:layout_weight="1"
                android:background="@drawable/bg_days_transparent"
                android:gravity="center"
                android:layout_margin="2dp"
                android:textColor="#000000" />

            <TextView
                android:text="Mar."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMar"
                android:layout_weight="1"
                android:background="@drawable/bg_days_transparent"
                android:gravity="center"
                android:layout_margin="2dp"
                android:textColor="#000000" />

            <TextView
                android:text="Mie."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMier"
                android:layout_weight="1"
                android:background="@drawable/bg_days_transparent"
                android:gravity="center"
                android:layout_margin="2dp"
                android:textColor="#000000" />

            <TextView
                android:text="Jue."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvJue"
                android:layout_weight="1"
                android:background="@drawable/bg_days_transparent"
                android:gravity="center"
                android:layout_margin="2dp"
                android:textColor="#000000" />

            <TextView
                android:text="Vie."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvVie"
                android:layout_weight="1"
                android:background="@drawable/bg_days_transparent"
                android:gravity="center"
                android:layout_margin="2dp"
                android:textColor="#000000" />

            <TextView
                android:text="Sab."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSab"
                android:layout_weight="1"
                android:background="@drawable/bg_days_transparent"
                android:gravity="center"
                android:layout_margin="2dp"
                android:textColor="#000000" />

            <TextView
                android:text="Dom."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDom"
                android:layout_weight="1"
                android:background="@drawable/bg_days_transparent"
                android:gravity="center"
                android:layout_margin="2dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_layout"
            android:padding="5dp">

            <TextView
                android:text="Hora:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_weight="1"
                android:textAlignment="center" />

            <TextView
                android:text="12:00 PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvHoraAbrir"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="18sp"
                android:background="@drawable/selector_bg_tv" />

            <TextView
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center" />

            <TextView
                android:text="8:00 PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvHoraCerrar"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="18sp"
                android:background="@drawable/selector_bg_tv" />
        </LinearLayout>

        <Button
            android:text="Agregar Hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAgregarHora" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/listaDias"
            android:padding="5dp"
            android:layout_weight="0.54" />

        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Material.Small"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light"
            android:text="Siguiente" />

    </LinearLayout>


</LinearLayout>
